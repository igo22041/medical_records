{
    "name": "medical-records/app",
    "description": "Medical Records System",
    "type": "project",
    "require": {
        "php": "^8.0",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "ext-mysqli": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-openssl": "*",
        "phpmailer/phpmailer": "^6.9",
        "guzzlehttp/guzzle": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "MedicalRecords\\": "src/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php -r \"if(file_exists('database.php')) { require_once 'database.php'; \$db = new Database(); \$db->createTables(); }\""
        ]
    }
}